<Window x:Class="WpfTodoListApp.TaskCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Task"
        Height="300"
        Width="300"
        MinWidth="300"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource WindowBackgroundStyle}">

    <StackPanel Margin="20">

        <TextBlock Text="Enter task info" Width="200" Style="{StaticResource TextBlockHeader}"/>

        <TextBox Text="{Binding TaskName, UpdateSourceTrigger=PropertyChanged}"
                 Width="200"
                 Style="{StaticResource RegularTextBox}"/>

        <TextBox Text="{Binding TaskDescription, UpdateSourceTrigger=PropertyChanged}"
                 Width="200"
                 Height="100" 
                 TextWrapping="Wrap" 
                 AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto"
                 Style="{StaticResource RegularTextBox}">
            <TextBox.Resources>
                <Style TargetType="ScrollBar">
                    <Setter Property="Background" Value="#dbead5"/>
                    <Setter Property="Width" Value="10"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <Button Content="Add Task" Command="{Binding AddTaskCommand}"  Width="200" Style="{StaticResource RegularButton}"/>

    </StackPanel>

</Window>
