<Window x:Class="WpfTodoListApp.TaskCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Task"
        Height="200"
        Width="300">

    <StackPanel Margin="20">
        <TextBlock Text="Enter task info:" Margin="0,0,0,10"/>
        <TextBox Name="TaskInput" Width="200" Margin="0,0,0,10"/>
        <Button Content="Add Task" Click="AddTaskClick" Width="200"/>
    </StackPanel>

</Window>
