<Window x:Class="WpfTodoListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="500">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6eaa5e" Offset="0.0"/>
            <GradientStop Color="#b7d5ad" Offset="0.7"/>
            <GradientStop Color="#dbead5" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="Background" Value="#6eaa5e"/>
            <Setter Property="Foreground" Value="GhostWhite"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top"  Grid.Row="0">

                <TextBlock Text="Enter task info:"
                           Margin="50, 10"
                           HorizontalAlignment="Center"/>

                <TextBox Name="TodoTaskInput" Width="100" />

                <Button Content="Add"
                    Click="AddTaskClick"
                    Margin="50, 10"
                    Width="100"/>

                <Button Content="Add Task"
                        Click="OpenTaskCreationWindow"
                        Margin="50,10"
                        Width="100"/>

            </StackPanel>

            <StackPanel Name="ItemsStackPanel" Grid.Row="1">
                <ItemsControl  Name="TodoItemsControl" ItemsSource="{Binding TodoTasks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="GhostWhite" BorderThickness="3" Margin="5" CornerRadius="5">
                                <TextBlock Text="{Binding}"
                                       VerticalAlignment="Stretch"
                                       HorizontalAlignment="Stretch"
                                       TextWrapping="Wrap"
                                       Style="{StaticResource TextBlockStyle}"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
